<!-- Config file for the game -->

<config>
  <app>
    <title>Little Lone King</title>
    <organization>UPC</organization>
  </app>
	
  <renderer>
    <vsync value="true"/>
  </renderer>

  <window>
    <resolution width="1024" height="768" scale="2"/>
    <fullscreen value="false"/>
    <borderless value="false"/>
    <resizable value="false"/>
    <fullscreen_window value="false"/>
  </window>

  <file_system>
    <path>data.zip</path>
  </file_system>

  <map>
    <folder>maps/</folder>
  </map>

  <scene>
    <first_map name="first_map.tmx"/>
    <second_map name="second_map.tmx"/>
    <starting_map_index value="2"/>
  </scene>

</config>